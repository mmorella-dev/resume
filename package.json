{
  "dependencies": {
    "jsonresume-theme-local": "file:./theme",
    "resumed": "^3.0.1"
  },
  "scripts": {
    "start": "npm-watch",
    "test:validate": "resumed validate",
    "resumed:build": "resumed render -o build/resume.html",
    "start:serve": "live-server --entry-file=resume.html build/",
    "watch:html": "npm-watch 'resumed render' resume.json"
  },
  "watch": {
    "resumed:build": {
      "patterns": [
        "resume.json",
        "theme/*"
      ],
      "quiet": true
    },
    "start:serve": {
      "quiet": true
    }
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0"
  }
}
